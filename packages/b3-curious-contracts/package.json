  "scripts": {
    "test": "REPORT_GAS=true npx hardhat test",
    "compile": "npx hardhat compile",
    "clean": "hardhat clean && rimraf dist",
    "package:prep": "pnpm run clean && pnpm run compile && tsc",
    "deploy:bsfactory:goerli": "npx hardhat deploy --network goerli --tags BattleshipFactory --export ./minified/deployments.json",
    "verify:bsfactory:goerli": "npx hardhat etherscan-verify --network goerli --solc-input",
    "publish-packages": "pnpm run package:prep && pnpm publish --no-git-checks"
  },
  "files": [
    "dist",
    "minified",
    "typechain"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/decent-dao/curiousity-labs/b3-curious-games.git"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.5",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.3",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
